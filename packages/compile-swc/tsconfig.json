{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    // "declarationDir": "dist/types",
		"declaration": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
		"plugins": [{"transform": "typescript-transform-paths", "useRootDirs": true, "afterDeclarations": true}]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}
