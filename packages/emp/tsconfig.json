    "declarationDir": "types",
    "plugins": [{ "transform": "ts-transform-paths" }],
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}