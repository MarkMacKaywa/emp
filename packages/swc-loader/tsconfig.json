{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "types",
		"module": "commonjs",

		// Node 10
		"target": "ES2018",
		"lib": ["ES2018"],

		"declaration": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}